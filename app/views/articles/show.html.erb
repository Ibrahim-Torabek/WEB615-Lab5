<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <strong>Title:</strong>
        <%= @article.title %>
      </div>

      <div class="panel-body">

        <strong>Content:</strong>
        <%= @article.content %>
        <p>
          <hr/>
          <strong>User:</strong>
          <%= link_to @article.user.name, user_path(@article.user) %>
        </p>
      </div>

      <div class="panel-footer">
        <%= link_to 'Edit', edit_article_path(@article), class: "btn btn-success" %>
        <%= link_to 'Back', articles_path, class: "btn btn-default" %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3>Comments of <%= @article.title %></h3>
      </div>
      <table class="table table-hover">

        <% @article.comments.each do |comment| %>
          <tr>
            <td><%= comment.message %></td>
            <td><%= link_to "Show", comment_path(comment), class: 'btn btn-default' %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
