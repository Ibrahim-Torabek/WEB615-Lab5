<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <div class="panel panel-success">
      <div class="panel-heading">
        <strong>Name:</strong>
        <%= @user.name %>
      </div>

      <div class="panel-body">
        <p>
          <strong>Email:</strong>
          <%= @user.email %>
        </p>

      </div>

      <div class="panel-footer">
        <%= link_to 'Edit', edit_user_path(@user), class: "btn btn-success" %>
        <%= link_to 'Back', users_path, class: "btn btn-default" %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3><%= @user.name %>'s Articles</h3>
      </div>
      <table class="table table-hover">
        <tr>
          <th class="col-md-10">Message</th>
          <th class="col-md-2"></th>
        </tr>
        <% @user.articles.each do |article| %>
          <tr>
            <td><%= article.title %></td>
            <td><%= link_to "Show", article_path(article), class: 'btn btn-default' %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>