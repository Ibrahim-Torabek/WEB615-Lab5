<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h1>Users</h1>
      </div>


      <table class="table table-hover col-,d-8">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th colspan="3">Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td style="width: 30%">
                <div class="btn-group-horzintal float-right" >
                  <%= link_to 'Show', user, class: 'btn btn-default btn-sm' %>
                  <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-success btn-sm' %>
                  <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm'  %>
                </div>
            </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="panel-footer">
        <%= link_to 'New User', new_user_path, class: 'btn btn-default' %>
        <%= will_paginate @User %>
      </div>

    </div>
  </div>
</div>

<br>


